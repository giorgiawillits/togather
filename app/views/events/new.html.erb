<% content_for :head do %>
  <title>ToGather | Sign up</title>
<% end %>
<div id="gradside" class="fullsize">
    <div class="container">
        <h1 class="white-text">ToGather</h1>
        <div class="row card extra-padding"> 
            <h2 class="teal-text">Create an Event!</h2>
                <div class="form-group">
                    <%= text_field_tag :title, "", {class: "form-control", placeholder: "Title", :required => ''} %>
                    <%= text_field_tag :location, "", {class: "form-control", placeholder: "Location", :required => ''} %>
                    <%= text_field_tag :description, "", {class: "form-control", placeholder: "Description", :required => ''} %>
                     <div class="input-field col s12">
                        <select>
                          <option value="" disabled selected>Choose your option</option>
                          <option value="1">Option 1</option>
                          <option value="2">Option 2</option>
                          <option value="3">Option 3</option>
                        </select>
                        <label>Group</label>
                      </div>
                      <div class="input-field col s12">
                        <select>
                          <option value="" disabled selected>Choose your option</option>
                          <option value="1">Option 1</option>
                          <option value="2">Option 2</option>
                          <option value="3">Option 3</option>
                        </select>
                        <label>Date</label>
                      </div>
                </div>
            <a class="waves-effect waves-light btn">Create Event</a> 
            <a class="waves-effect waves-light btn" href= "/ ">Cancel</a>
        </div>
    </div>
</div>
