<!-- app/views/sessions/new.html.erb -->
<% content_for :head do %>
  <title>ToGather | Log in</title>
<% end %>
<div id="gradside">
    <div class="container row">
        <h1 class="yellow-text yellow-accent-1">ToGather</h1>
        <div>
            <h3 class="teal-text">Welcome to ToGather</h3>
            <p class = "yellow-text yellow-accent-4">Login in to see it in action.</p>
            <%= form_tag '/login', {:class => 'm-t', "data-parsley-validate" => ''} do %>
                <div class="form-group">
                    <%= text_field_tag :email, "", {class: "form-control", placeholder: "Email", :required => ''} %>
                </div>
                <div class="form-group">
                    <%= password_field_tag :password, "", {class: "form-control", placeholder: "Password", :required => ''} %>
                </div>
                <%= submit_tag "Login", class: "btn btn-primary block full-width m-b" %>
                <a href="#"><small class="teal-text"> Forgot password?</small></a>
                <p class="text-muted text-center"><small class="teal-text"> Do not have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="<%= url_for :controller => 'users', :action => 'new' %>"> Create an account</a>
            <% end %>
            <p class="m-t"> <small>Homie 2016. Made with â™¥ by Giorgia, Pauline, Valeriya, and Lauren </small> </p>
        </div>
    </div>
</div>
